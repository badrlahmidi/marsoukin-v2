{
    "info": {
        "name": "Marsoukin API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8000/api"
        },
        {
            "key": "token",
            "value": ""
        }
    ],
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Register",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"Test User\",\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\",\n    \"password_confirmation\": \"password123\",\n    \"phone\": \"+212 600 000 000\",\n    \"role\": \"buyer\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/register",
                            "host": ["{{base_url}}"],
                            "path": ["auth", "register"]
                        }
                    }
                },
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"ahmed@example.com\",\n    \"password\": \"password\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/login",
                            "host": ["{{base_url}}"],
                            "path": ["auth", "login"]
                        }
                    }
                },
                {
                    "name": "Me",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/auth/me",
                            "host": ["{{base_url}}"],
                            "path": ["auth", "me"]
                        }
                    }
                },
                {
                    "name": "Logout",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/auth/logout",
                            "host": ["{{base_url}}"],
                            "path": ["auth", "logout"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Products",
            "item": [
                {
                    "name": "List Products",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/products",
                            "host": ["{{base_url}}"],
                            "path": ["products"]
                        }
                    }
                },
                {
                    "name": "Featured Products",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/products/featured",
                            "host": ["{{base_url}}"],
                            "path": ["products", "featured"]
                        }
                    }
                },
                {
                    "name": "Search Products",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/products/search?q=tajine",
                            "host": ["{{base_url}}"],
                            "path": ["products", "search"],
                            "query": [
                                {
                                    "key": "q",
                                    "value": "tajine"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Product",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/products/tajine-traditionnel-berbere",
                            "host": ["{{base_url}}"],
                            "path": ["products", "tajine-traditionnel-berbere"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Categories",
            "item": [
                {
                    "name": "List Categories",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/categories",
                            "host": ["{{base_url}}"],
                            "path": ["categories"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Cart",
            "item": [
                {
                    "name": "Get Cart",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/cart",
                            "host": ["{{base_url}}"],
                            "path": ["cart"]
                        }
                    }
                },
                {
                    "name": "Add to Cart",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"product_id\": 1,\n    \"quantity\": 2\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/cart/add",
                            "host": ["{{base_url}}"],
                            "path": ["cart", "add"]
                        }
                    }
                }
            ]
        }
    ]
}
